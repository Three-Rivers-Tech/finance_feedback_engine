# ============================================================
# Finance Feedback Engine 2.0 - TEST Environment
# ============================================================
# Used by docker-compose.test.yml for CI/CD testing
# ============================================================

# ============================================================
# ENVIRONMENT
# ============================================================
ENVIRONMENT="test"

# ============================================================
# POSTGRESQL DATABASE CONFIGURATION (Test)
# ============================================================
# Test database uses separate credentials/port to avoid conflicts
DATABASE_URL="postgresql+psycopg2://test_user:test_password@postgres:5432/ffe_test"
POSTGRES_USER="test_user"
POSTGRES_PASSWORD="test_password"
POSTGRES_DB="ffe_test"

# Test pool settings (minimal for isolated tests)
DB_POOL_SIZE="5"
DB_POOL_OVERFLOW="2"
DB_POOL_RECYCLE="3600"
DB_POOL_TIMEOUT="30"

# ============================================================
# ALPHA VANTAGE API (Test Mode)
# ============================================================
# Use mock data or test API key
ALPHA_VANTAGE_API_KEY="MOCK_API_KEY_FOR_TESTING"

# ============================================================
# TRADING PLATFORM (Test)
# ============================================================
# Always use mock platform in tests
TRADING_PLATFORM="mock"

# ============================================================
# REDIS (Test)
# ============================================================
REDIS_HOST="redis"
REDIS_PORT="6379"

# ============================================================
# MONITORING & LOGGING (Test)
# ============================================================
LOGGING_LEVEL="DEBUG"
MONITORING_ENABLED="true"

# ============================================================
# OLLAMA (Test)
# ============================================================
OLLAMA_HOST="http://ollama:11434"

# ============================================================
# DISABLE EXTERNAL SERVICES (Test Mode)
# ============================================================
# Prevent accidental calls to real services
DISABLE_EXTERNAL_API_CALLS="true"
MOCK_LLM_RESPONSES="true"
