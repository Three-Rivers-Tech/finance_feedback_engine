# Telegram Bot Configuration for Finance Feedback Engine

# Enable/disable Telegram approval bot
enabled: false

# Telegram Bot API token (get from @BotFather)
# Set this to enable Telegram approvals
bot_token: null  # or set TELEGRAM_BOT_TOKEN env var

# Allowed Telegram user IDs (whitelist for security)
# Get your user ID from @userinfobot
allowed_user_ids:
  - 000000000  # Replace with your Telegram user ID
  # - 111111111  # Add more users as needed

# Webhook configuration
# Option 1 (Development): Leave null to auto-start ngrok tunnel
# Option 2 (Production): Set to your public HTTPS domain
webhook_url: null  # e.g., "https://yourdomain.com" for production

# ngrok configuration (for development)
# Get free auth token from https://dashboard.ngrok.com/get-started/your-authtoken
ngrok_auth_token: null  # or set NGROK_AUTHTOKEN env var

# Redis configuration for approval queue
# Redis is required for the approval queue to function
use_redis: true
use_redis: true
redis_host: localhost
redis_port: 6379

# Approval timeout (seconds)
# How long to wait for user response before timeout
approval_timeout: 300  # 5 minutes
