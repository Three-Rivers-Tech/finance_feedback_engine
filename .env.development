# Finance Feedback Engine - Development Environment Configuration
# Use: docker-compose --env-file .env.development up

# Docker behavior
DOCKER_TARGET=builder
PROFILE=
ENV_FILE=.env.dev
BACKEND_CONTAINER=ffe-backend-dev
FRONTEND_CONTAINER=ffe-frontend-dev
BACKEND_COMMAND=uvicorn finance_feedback_engine.api.app:app --host 0.0.0.0 --port 8000 --reload
FRONTEND_CONTEXT=./frontend
FRONTEND_DOCKERFILE=Dockerfile.dev
FRONTEND_COMMAND=npm run dev -- --host 0.0.0.0
VITE_API_URL=http://localhost:8000
NODE_ENV=development

# Database (optional for dev; omit postgres in dev)
DB_CONDITION=service_started
POSTGRES_USER=ffe_user
POSTGRES_PASSWORD=devpass
POSTGRES_DB=ffe_dev
DATABASE_URL=postgresql+psycopg2://ffe_user:devpass@postgres:5432/ffe_dev
DB_POOL_SIZE=5
DB_POOL_OVERFLOW=2

# GPU support
NVIDIA_COUNT=1

# Logging
LOGGING_LEVEL=DEBUG
MONITORING_ENABLED=false

# API Configuration
ALPHA_VANTAGE_API_KEY=demo
BACKEND_PORT=8000
FRONTEND_PORT=5173

# Nginx
BACKEND_URL=http://backend:8000
OLLAMA_URL=http://ollama:11434
GRAFANA_URL=http://grafana:3000
GZIP_LEVEL=6

# Ollama
OLLAMA_PORT=11434

# Grafana
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Prometheus
PROMETHEUS_PORT=9090

# Frontend dev hot reload
FRONTEND_SOURCE_MOUNT=./frontend:/app
