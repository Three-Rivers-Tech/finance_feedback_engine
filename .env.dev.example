# ============================================================
# Finance Feedback Engine 2.0 - DEVELOPMENT Environment
# ============================================================
# Copy this file to .env.dev for local development
# Uses mock trading platform - no real API calls
# ============================================================

# ============================================================
# ENVIRONMENT
# ============================================================
ENVIRONMENT="development"
DEBUG="true"

# ============================================================
# TRADING PLATFORM - DEVELOPMENT (MOCK)
# ============================================================
TRADING_PLATFORM="mock"  # No real trading, fully simulated

# ============================================================
# ALPHA VANTAGE API (Optional for dev)
# ============================================================
ALPHA_VANTAGE_API_KEY="demo"  # Use demo key or your own

# ============================================================
# DECISION ENGINE - DEVELOPMENT
# ============================================================
DECISION_ENGINE_AI_PROVIDER="local"
DECISION_ENGINE_MODEL_NAME="llama3.2:3b-instruct-q4_0"
DECISION_ENGINE_DECISION_THRESHOLD="0.60"  # Lower threshold for testing

# ============================================================
# MONITORING - DEVELOPMENT (DISABLED)
# ============================================================
MONITORING_ENABLED="false"  # Disable to reduce noise
MONITORING_MANUAL_CLI="true"

# ============================================================
# ERROR TRACKING - DEVELOPMENT (DISABLED)
# ============================================================
ERROR_TRACKING_ENABLED="false"  # No Sentry in dev
SENTRY_DSN=""

# ============================================================
# LOGGING - DEVELOPMENT (VERBOSE)
# ============================================================
LOGGING_LEVEL="DEBUG"
LOGGING_STRUCTURED_ENABLED="false"  # Human-readable logs
LOGGING_STRUCTURED_FORMAT="text"
LOGGING_CONSOLE_ENABLED="true"
LOGGING_FILE_ENABLED="false"  # Console only in dev

# ============================================================
# PORTFOLIO MEMORY - DEVELOPMENT
# ============================================================
PORTFOLIO_MEMORY_ENABLED="true"
PORTFOLIO_MEMORY_LEARNING_RATE="0.1"  # Faster learning for testing

# ============================================================
# AGENT MODE - DEVELOPMENT
# ============================================================
AGENT_AUTONOMOUS_ENABLED="false"
AGENT_APPROVAL_POLICY="manual"
AGENT_AUTO_RESTART_ON_ERROR="false"

# ============================================================
# RISK MANAGEMENT - DEVELOPMENT (RELAXED)
# ============================================================
SAFETY_MAX_LEVERAGE="10.0"  # High leverage OK for testing
SAFETY_MAX_POSITION_PCT="1.0"  # No limits in mock mode
SAFETY_CIRCUIT_BREAKER_ENABLED="false"

# ============================================================
# API AUTHENTICATION - DEVELOPMENT (OPTIONAL)
# ============================================================
API_AUTH_ENABLED="false"  # Disabled for easier testing
FINANCE_FEEDBACK_API_KEY="dev_api_key"

# ============================================================
# JWT CONFIGURATION - DEVELOPMENT
# ============================================================
JWT_SECRET_KEY="dev_secret_key_not_secure"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES="1440"  # 24 hours

# ============================================================
# TELEGRAM - DEVELOPMENT (DISABLED)
# ============================================================
TELEGRAM_ENABLED="false"
TELEGRAM_BOT_TOKEN=""
TELEGRAM_CHAT_ID=""

# ============================================================
# OBSERVABILITY - DEVELOPMENT (MINIMAL)
# ============================================================
TRACING_ENABLED="false"
OBSERVABILITY_ENABLED="false"
OBSERVABILITY_BACKEND="console"
OBSERVABILITY_EXPORT_PROMETHEUS="false"

# ============================================================
# REDIS - DEVELOPMENT (OPTIONAL)
# ============================================================
REDIS_ENABLED="false"

# ============================================================
# DEPLOYMENT PORTS - DEVELOPMENT
# ============================================================
BACKEND_PORT="8000"
FRONTEND_PORT="5173"  # Vite dev server
PROMETHEUS_PORT="9090"
GRAFANA_PORT="3001"

# ============================================================
# TESTING/DEVELOPMENT FLAGS
# ============================================================
SIGNAL_ONLY_DEFAULT="true"  # Signals only, no execution
PAPER_TRADING_MODE="true"
MOCK_MARKET_DATA="true"

# ============================================================
# PERSISTENCE - DEVELOPMENT
# ============================================================
PERSISTENCE_ENABLED="true"
PERSISTENCE_STORAGE_PATH="/app/data/decisions"
PERSISTENCE_MAX_DECISIONS="1000"  # Small limit for dev

# ============================================================
# DEVELOPMENT NOTES
# ============================================================
# 1. Mock platform simulates all trading operations
# 2. No real API calls are made (except Alpha Vantage if configured)
# 3. All logging goes to console for easy debugging
# 4. Authentication disabled for faster iteration
# 5. Use docker-compose.dev.yml for hot reload
# ============================================================
